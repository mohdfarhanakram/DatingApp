<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.digitalforce.datingapp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="horizontal" >



    <ImageView
        android:id="@+id/img_profile_pre"
        style="@style/img_home"
        android:contentDescription="@null"
        android:src="@drawable/previous"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_profile_chat"
        style="@style/img_home"
        android:layout_margin="@dimen/dp_8"
        android:contentDescription="@null"
        android:src="@drawable/chat" />

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <com.digitalforce.datingapp.widgets.RoundedImageView
                android:id="@+id/img_profile"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_90"
                android:contentDescription="@null"
                android:src="@drawable/farhan"
                app:border="true"
                app:border_color="@color/white"
                app:border_width="1dp"
                app:shadow="true" />

        <ImageView
                android:id="@+id/heart_button"
                android:src="@drawable/heart"
                android:layout_width="30dp"
                android:layout_marginLeft="75dp"
                android:layout_alignParentBottom="true"
                android:layout_height="30dp"/>

    </RelativeLayout>



    <ImageView
        android:id="@+id/img_profile_favorite"
        style="@style/img_home"
        android:layout_margin="@dimen/dp_8"
        android:contentDescription="@null"
        android:src="@drawable/unfavourite" />

    <ImageView
        android:id="@+id/img_profile_next"
        style="@style/img_home"
        android:contentDescription="@null"
        android:src="@drawable/next"
        android:visibility="gone" />

</LinearLayout>