<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.digitalforce.datingapp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" >

    <com.digitalforce.datingapp.widgets.RoundedImageView
        android:id="@+id/img_match"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:contentDescription="@null"
        android:src="@drawable/profile"
        app:border="true"
        app:border_color="@color/white"
        app:border_width="1dp"
        app:shadow="true" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_match_name"
                style="@style/txt_base"
                android:padding="@dimen/dp_3"
                android:text="@string/member_nmae"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_3"
                android:contentDescription="@null"
                android:src="@drawable/online_staus" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_match_views"
            style="@style/txt_base"
            android:padding="@dimen/dp_3"
            android:text="@string/match_msg"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>
	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_matchchat_time"
                style="@style/txt_base"
                android:padding="@dimen/dp_3"
                android:text="@string/matchchat_time"
                android:textSize="@dimen/sp_11" />

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_3"
                android:contentDescription="@null"
                android:layout_margin="@dimen/dp_5"
                android:layout_gravity="right"
                android:src="@drawable/online_staus" />
    </LinearLayout>
</LinearLayout>